{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "command": "npm run dev -- --open",
      "name": "Sveltekit Launch (WebClient)",
      "request": "launch",
      "type": "node-terminal",
      "cwd": "${workspaceFolder}/src/Frontend/WebClient"
    },
    {
      "name": ".NET Launch (Identity Api)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build Identity Api",
      "program": "${workspaceFolder}/src/Backend/Identity/Identity.Api/bin/Debug/net6.0/Identity.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Backend/Identity/Identity.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:10003"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Launch (Diagnosticos Api)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build Diagnosticos Api",
      "program": "${workspaceFolder}/src/Backend/Diagnosticos/Diagnosticos.Api/bin/Debug/net6.0/Diagnosticos.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Backend/Diagnosticos/Diagnosticos.Api",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "http://localhost:10002"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    }
  ],
  "compounds": [
    {
      "name": "Backend Launch",
      "configurations": [
        ".NET Launch (Diagnosticos Api)",
        ".NET Launch (Identity Api)"
      ]
    },
    {
      "name": "Backend & Frontend Launch",
      "configurations": [
        "Sveltekit Launch (WebClient)",
        ".NET Launch (Diagnosticos Api)",
        ".NET Launch (Identity Api)"
      ]
    }
  ]
}
